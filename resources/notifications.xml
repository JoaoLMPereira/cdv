<cdv>
  <outlets>
    <outlet name='email' class='pt.webdetails.cdv.notifications.EmailOutlet' defaultThreshold='WARN'>
      <conf>
        <property name='to' value='metrics-alerts@mozilla.com'/>
        <property name='smtp' value='mail.google.com'/>
        <property name='cc' value='pdpinheiro@gmail.com'/>
        <property name='plain-text' value='true'/>
      </conf>
    </outlet>
    <outlet name='logger' class='pt.webdetails.cdv.notifications.LoggingOutlet' >
    </outlet>
  </outlets>
  <alerts>
    <alert outlet='logger'>
      <groups>
        <group name='cda' threshold='WARN' />
        <group name='*' threshold='*' />
      </groups>
    </alert>
  </alerts>
</cdv>
