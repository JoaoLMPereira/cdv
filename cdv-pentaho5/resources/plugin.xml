<?xml version="1.0" encoding="UTF-8"?>
<plugin title="cdv" loader="DEFAULT">

  <lifecycle-listener class="pt.webdetails.cdv.CdvLifecycleListener"/>

  <static-paths>
    <static-path url="/cdv/js" localFolder="js"/>
    <static-path url="/cdv/css" localFolder="css"/>
    <static-path url="/cdv/overlay" localFolder="overlay"/>
   <static-path url="/cdv/lang" localFolder="lang"/>
  </static-paths>

  <content-types>
  </content-types>

  <overlays>
    <overlay id="startup.cdv" resourcebundle="plugin/cdv/api/resources/lang/messages">
      <menubar id="toolsmenu">
        <menuitem id="CDV" label="CDV" command="mantleXulHandler.openUrl('CDV','CDV','plugin/cdv/api/home')"/>
      </menubar>
    </overlay>
  </overlays>

</plugin>
